  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach( (item)=>{ %>
      <form class="item" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onclick="this.form.submit()" name="checkbox" value = <%=  item._id%>>
          <p><%= item.name %></p>
        </div>
        <!-- to send data to identify right list that is hidden from user -->
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        <input type="hidden" name="userID" value="<%= userId %>"></input>
        <input type="hidden" name="listID" value="<%= listId %>"></input>
      </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="list" value = <%= listTitle%>>+</button>
        <input type="hidden" name="userid" value ="<%= userId %>"></input>
        <input type="hidden" name="listid" value = "<%= listId %>"></form></input>
      </form>
  </div>

  <div class="box">
    <p>Take a look at what the community has recently completed!</p>
    <ul class="list-group">
      <% completedItems.forEach( (item)=>{ %>
      <li class = "list-group-item"><%= item.name %></li>
      <% }); %>
    </ul>
  </div>


