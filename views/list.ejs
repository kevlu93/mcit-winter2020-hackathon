<%- include("partials/header") -%>

  <!-- <div class="logo">
    <img id="logo" src="/images/upenn_logo.png" alt="upenn_logo">
  </div> -->
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach( (item)=>{ %>
      <form class="item" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onclick="this.form.submit()" name="checkbox" value = <%=  item._id  %>>
          <p><%=  item.name  %></p>
        </div>
        <!-- to send data to identify right list that is hidden from user -->
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="list" value = <%= listTitle %>>+</button>
      </form>
  </div>

<%- include("partials/footer") -%>
